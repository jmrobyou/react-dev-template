{
    "plugins": [
        "react"
    ],

    "extends": ["eslint:recommended", "plugin:react/recommended"],

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true,
            "experimentalObjectRestSpread": true
        }
    },

    "env": {
        "browser": true,
        "es6": true
    },

    "globals": {
        "module": true,
        "window": true,
        "navigator": true
    },

    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-console": ["warn", { "allow": ["log", "debug", "warn", "error"]}]
    }
}